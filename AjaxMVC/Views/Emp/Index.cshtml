@model IEnumerable<AjaxMVC.Models.EmpModel>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
@*<div class="topnav">
    <input type="text" placeholder="Search..">
</div>*@
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("searchstring")
        <input type="submit" value="Search" autocomplete="off"/>
    </p>
}
@*<button class="btn btn-sm btn-primary m-2" id="btnSearchEmployee">Search</button>*@
<button class="btn btn-sm btn-primary m-2" id="btnAddEmployee">Add Employee</button>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-center">Id</th>
            <th class="text-center">Name</th>
            <th class="text-center">Gender</th>
            <th class="text-center">Department</th>
            <th class="text-center">Salary</th>
            <th class="text-center">Operation</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>
<div>
    <input type="hidden" id="urlEmployeeData" value="@Url.Action("EmpDetails","Emp")" />
</div>
<div class="modal fade modal" id="EmployeeMadal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="employeeHeading">Add Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="empId">
                        <label>Id</label>
                        <input type="text" class="form-control" id="EmployeeId" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="Name" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <input type="text" placeholder="Enter gender" class="form-control" id="Gender" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <input type="text" placeholder="Enter department" class="form-control" id="Department" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="Enter salary" class="form-control" id="Salary" autocomplete="off"/>
                    </div>                   
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployee()" id="AddEmployee">Save</button>
                <button class="btn btn-warning" onclick="UpdateEmployee()" style="display:none" id="btnUpdate">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Custom.js"></script>
